{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "moduleNameMapper": {
    "src/(.*)": "<rootDir>/src/$1"
  },
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".*\\.spec\\.ts$",
  "collectCoverageFrom": [
    "**/*.(t|j)s"
  ],
  "coverageDirectory": "../coverage",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  }
}
